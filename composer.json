{
    "name": "supianidz/octopyframework",
    "type": "project",
    "description": "Lightweight PHP framework with Laravel look like.",
    "license": "MIT",
    "keywords": ["framework", "octopy", "laravel"],
    "support": {
        "issues": "https://github.com/SupianIDz/OctopyFramework/issues",
        "source": "https://github.com/SupianIDz/OctopyFramework"
    },
    "authors": [
        {
            "name": "Supian M",
            "email": "supianidz@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload-dev": {
        "psr-4": {
            "Octopy\\Testing\\": "testing/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php octopy key:generate"
        ]
    }   
}
